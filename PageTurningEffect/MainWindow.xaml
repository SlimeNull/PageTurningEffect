<Window x:Class="PageTurningEffect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PageTurningEffect"
        xmlns:comp="clr-namespace:PageTurningEffect.Components"
        xmlns:bc="clr-namespace:PageTurningEffect.BookContents"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border BorderThickness="1"
                BorderBrush="Gray"
                Margin="24">
            <comp:SimulatedBook x:Name="book"
                                Background="#f2e4c1"
                                SpineShadowSize="10"
                                TurningShadowSize="10"
                                Padding="12">
                <bc:ControlBookContent>
                    <bc:ControlBookPage>
                        <StackPanel>
                            <Button Content="QWQ"/>
                        </StackPanel>
                    </bc:ControlBookPage>
                    <bc:ControlBookPage>
                        <StackPanel>
                            <Button Content="QWQ"/>
                        </StackPanel>
                    </bc:ControlBookPage>
                    <bc:ControlBookPage>
                        <StackPanel>
                            <Button Content="QWQ"/>
                        </StackPanel>
                    </bc:ControlBookPage>
                </bc:ControlBookContent>
            </comp:SimulatedBook>
        </Border>
    </Grid>
</Window>
